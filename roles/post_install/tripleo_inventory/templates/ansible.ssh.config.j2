{% for host in groups['all'] %}
{% if host not in ['localhost'] %}
Host {{ host }}
    HostName {{ hostvars[host].ansible_ssh_host }}
    User {{ hostvars[host].ansible_ssh_user }}
    IdentityFile {{ hostvars[host]['ansible_ssh_private_key_file'] }}
    StrictHostKeyChecking no
    UserKnownHostsFile=/dev/null
    ForwardAgent yes
{% if setup_type == 'baremetal' %}
    ProxyCommand ssh -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null -W %h:%p -i {{ hostvars[groups['undercloud'][0]].ansible_ssh_private_key_file }} {{ hostvars[groups['undercloud'][0]].ansible_ssh_user }}@{{ hostvars[groups['undercloud'][0]].ansible_ssh_host }}
{% elif setup_type == 'virt' and host in groups['undercloud'] %}
    ProxyCommand ssh -W %h:%p -i {{ hostvars[groups['undercloud'][0]].ansible_ssh_private_key_file }} {{ hostvars[groups['hypervisor'][0]].ansible_ssh_user }}@{{ hostvars[groups['hypervisor'][0]].ansible_ssh_host }}
{% elif setup_type == 'virt' and host not in groups['undercloud'] and host not in groups['hypervisor'] %}
    ProxyCommand ssh -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null -F {{ environment_dir }}/ansible.ssh.config.{{ hostvars[groups['hypervisor'][0]].ansible_ssh_host }} {{ hostvars[groups['undercloud'][0]].inventory_hostname }} -W {{ hostvars[host].ansible_ssh_host }}:22
{% elif setup_type == 'virt' and host in groups['hypervisor'] %}
{% endif %}
{% endif %}
{% endfor %}

Host {{ '%s' % '.'.join(hostvars[groups['undercloud'][0]].ansible_br_ctlplane.ipv4.address.split('.')[:-2]) }}.*
    User heat-admin
    IdentityFile {{ overcloud_private_key }}
    StrictHostKeyChecking no
    UserKnownHostsFile=/dev/null
    ForwardAgent yes
{% if setup_type == 'baremetal' %}
    ProxyCommand ssh -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null -W %h:%p -i {{ hostvars[groups['undercloud'][0]].ansible_ssh_private_key_file }} {{ hostvars[groups['undercloud'][0]].ansible_ssh_user }}@{{ hostvars[groups['undercloud'][0]].ansible_ssh_host }}
{% elif setup_type == 'virt' %}
    ProxyCommand ssh -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null -F {{ environment_dir }}/ansible.ssh.config.{{ hostvars[groups['hypervisor'][0]].ansible_ssh_host }} {{ hostvars[groups['undercloud'][0]].inventory_hostname }} -W %h:22
{% endif %}
